{
  "manifest_version": 3,
  "name": "sidebar-open-close-methods",
  "description": "sidebar-open-close-methods",
  "version": "1.0",
  "icons": {
    "16": "/icon.png",
    "48": "/icon.png"
  },
  "permissions": ["sidePanel"],
  "background": {
    "scripts": ["/background.js"],
    "service_worker": "/background.js"
  },
  "action": {
    "default_popup": "/options.html",
    "default_area": "navbar"
  },
  "options_ui": {
    "page": "/options.html",
    "browser_style": false,
    "open_in_tab": true
  },
  "options_page": "/options.html"
}
